<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="192dp"
    android:background="@drawable/background"
    android:theme="@style/Theme.IWantADelivery">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profileImageHeader"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/profile_image"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/username_header"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/profileImageHeader"
        app:layout_constraintTop_toBottomOf="@+id/profileImageHeader" />

    <ImageButton
        android:id="@+id/online_count_btn"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginEnd="16dp"
        android:background="#00000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/profileImageHeader"/>

    <TextView
        android:id="@+id/online_count_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="10"
        app:layout_constraintBottom_toBottomOf="@+id/online_count_btn"
        app:layout_constraintEnd_toStartOf="@+id/online_count_btn"
        app:layout_constraintTop_toTopOf="@+id/online_count_btn" />

</androidx.constraintlayout.widget.ConstraintLayout>